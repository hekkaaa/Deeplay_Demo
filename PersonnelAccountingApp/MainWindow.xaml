<Window x:Class="PersonnelAccountingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonnelAccountingApp"
        mc:Ignorable="d"
        Title="Учет персонала" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.20*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            
        <Grid x:Name="GreneralPanel" Background="AliceBlue" Grid.Row="0">
            <Button Content="Добавить" HorizontalAlignment="Left" Margin="58,36,0,0" VerticalAlignment="Top"/>

        </Grid>
        <Grid Grid.Row="1">
            <ListBox ItemsSource="{Binding CollectionEmployees}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Margin="20,0,0,0"/>
                            <TextBlock Text="{Binding Surname}" Margin="20,0,0,0"/>
                            <TextBlock Text="{Binding Post}" Margin="20,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
